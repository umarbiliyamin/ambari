cluster:
  name:   {{cluster_name}} 
  routing:
    allocation.node_concurrent_recoveries: {{cluster_routing_allocation_node_concurrent_recoveries}}
    allocation.disk.watermark.low: {{cluster_routing_allocation_disk_watermark_low}}
    allocation.disk.threshold_enabled: true
    allocation.disk.watermark.high: {{cluster_routing_allocation_disk_watermark_high}}

discovery:
  zen:
    ping:
      unicast:
        hosts:
             - {{seed_node1}} 
             - {{seed_node2}}
             - {{seed_node3}}
node:
  data: true
  master: true
  name: {{hostname}}
path:
  data: {{path_data}}
  
http:
  port: {{http_port}}

transport:
  tcp:
    port: {{transport_tcp_port}}
 
indices:
  memory:
   index_buffer_size: {{index_buffer_size}}%
  fielddata:
   cache.size: {{indices_fielddata_cache_size}}

bootstrap.memory_lock: false
bootstrap.system_call_filter: false

discovery.zen.ping_timeout: {{discovery_zen_ping_timeout}}
discovery.zen.fd.ping_interval: {{discovery_zen_fd_ping_interval}}
discovery.zen.fd.ping_timeout: {{discovery_zen_fd_ping_timeout}}
discovery.zen.fd.ping_retries: {{discovery_zen_fd_ping_retries}}

network.host: {{hostname}}

es.api.enabled: false

udc.enabled: true
udc.initial_delay: 10m
udc.interval: 24h
udc.url: http://example.com/

node.sql.read_only: false

bulk.request_timeout: 16m

cluster.info.update.interval: 30s
monitor.jvm.gc.collector.young.warn: 1000ms
monitor.jvm.gc.collector.young.info: 700ms
monitor.jvm.gc.collector.young.debug: 400ms

monitor.jvm.gc.collector.old.warn: 10s
monitor.jvm.gc.collector.old.info: 5s
monitor.jvm.gc.collector.old.debug: 2s

cluster.routing.allocation.balance.shard: 0.45f
cluster.routing.allocation.balance.index: 0.5f
cluster.routing.allocation.balance.threshold: 1.0f

cluster.routing.allocation.enable: all
cluster.routing.allocation.allow_rebalance: indices_all_active
cluster.routing.allocation.cluster_concurrent_rebalance: 2
cluster.routing.allocation.node_initial_primaries_recoveries: 4

indices.store.throttle.type: merge
indices.store.throttle.max_bytes_per_sec: 20mb

discovery.zen.minimum_master_nodes: 2

gateway.recover_after_nodes: 1
gateway.recover_after_time: 5m
gateway.expected_nodes: 2

transport.tcp.compress: true
http.max_content_length: 100mb
http.enabled: true
stats.enabled: true

ssl.http.enabled: false
ssl.psql.enabled: false