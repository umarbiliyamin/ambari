tsd.network.port = 4242
tsd.network.bind = 0.0.0.0
tsd.network.tcp_no_delay = true
tsd.network.keep_alive = true
tsd.network.reuse_address = true
tsd.network.worker_threads = 8
tsd.network.async_io = true
tsd.http.staticroot = {{install_dir}}/static/
tsd.http.cachedir = /tmp/opentsdb
tsd.core.auto_create_metrics = false
tsd.core.plugin_path = {{install_dir}}/plugins
tsd.storage.enable_compaction = true
tsd.storage.flush_interval = 1000
tsd.storage.compaction.flush_speed = 1
tsd.storage.enable_appends = true
tsd.storage.hbase.prefetch_meta = true

tsd.storage.hbase.data_table = tsdb
tsd.storage.hbase.uid_table = tsdb-uid
tsd.storage.hbase.meta_table = tsdb-meta
tsd.storage.hbase.tree_table = tsdb-tree

tsd.storage.hbase.zk_basedir = {{zk_basedir}}
tsd.storage.hbase.zk_quorum = {{zk_quorum}}


